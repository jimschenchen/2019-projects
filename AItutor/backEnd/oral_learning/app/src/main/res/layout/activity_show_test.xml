<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_top_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_wrapper"
            android:orientation="vertical"
            android:paddingLeft="150dp"
            android:paddingRight="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/normal_grey"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/regular_dimen_x20">

                <ImageView
                    android:id="@+id/civ_test_logo"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/bg_welcome" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hint_blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/regular_dimen_x25"
                android:paddingLeft="@dimen/regular_dimen_x20"
                android:paddingRight="@dimen/regular_dimen_x20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="练习名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/et_test_name"
                    android:layout_width="@dimen/regular_dimen_x160"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:gravity="right"
                    android:paddingBottom="@dimen/regular_dimen_x10"
                    android:paddingTop="@dimen/regular_dimen_x10"
                    android:textColor="@color/hint_grey"
                    android:textSize="@dimen/text_size_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/normal_10"
                android:layout_marginRight="@dimen/normal_10"
                android:background="@color/hint_blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/regular_dimen_x25"
                android:paddingLeft="@dimen/regular_dimen_x20"
                android:paddingRight="@dimen/regular_dimen_x20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="练习类别"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_test_type"
                    android:layout_width="@dimen/regular_dimen_x160"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:gravity="right"
                    android:paddingBottom="@dimen/regular_dimen_x10"
                    android:paddingTop="@dimen/regular_dimen_x10"
                    android:text="考试"
                    android:textColor="@color/hint_grey"
                    android:textSize="@dimen/text_size_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/normal_10"
                android:layout_marginRight="@dimen/normal_10"
                android:background="@color/hint_blue" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/regular_dimen_x25"
                android:paddingLeft="@dimen/regular_dimen_x20"
                android:paddingRight="@dimen/regular_dimen_x20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="练习试题"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_exam_name"
                    android:layout_width="@dimen/regular_dimen_x160"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:gravity="right"
                    android:paddingBottom="@dimen/regular_dimen_x10"
                    android:paddingTop="@dimen/regular_dimen_x10"
                    android:text=""
                    android:textColor="@color/hint_grey"
                    android:textSize="@dimen/text_size_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/normal_10"
                android:layout_marginRight="@dimen/normal_10"
                android:background="@color/hint_blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/regular_dimen_x25"
                android:paddingLeft="@dimen/regular_dimen_x20"
                android:paddingRight="@dimen/regular_dimen_x20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="开始时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_test_begin"
                    android:layout_width="@dimen/regular_dimen_x160"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:gravity="right"
                    android:paddingBottom="@dimen/regular_dimen_x10"
                    android:paddingTop="@dimen/regular_dimen_x10"
                    android:text=""
                    android:textColor="@color/hint_grey"
                    android:textSize="@dimen/text_size_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/normal_10"
                android:layout_marginRight="@dimen/normal_10"
                android:background="@color/hint_blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/regular_dimen_x25"
                android:paddingLeft="@dimen/regular_dimen_x20"
                android:paddingRight="@dimen/regular_dimen_x20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="结束时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_test_end"
                    android:layout_width="@dimen/regular_dimen_x160"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:gravity="right"
                    android:paddingBottom="@dimen/regular_dimen_x10"
                    android:paddingTop="@dimen/regular_dimen_x10"
                    android:text=""
                    android:textColor="@color/hint_grey"
                    android:textSize="@dimen/text_size_15" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/normal_10"
                android:layout_marginRight="@dimen/normal_10"
                android:background="@color/hint_blue" />



            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/regular_dimen_x30"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="@dimen/regular_dimen_x30"
                android:background="@drawable/bg_btn_confirm"
                android:paddingBottom="@dimen/regular_dimen_x6"
                android:visibility="invisible"
                android:paddingTop="@dimen/regular_dimen_x6"
                android:text="确认添加"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/mBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>