<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/regular_dimen_x2"
    android:orientation="vertical"
    android:padding="@dimen/regular_dimen_x10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/normal_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_contet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/normal_5"
            android:layout_marginLeft="@dimen/normal_10"
            android:layout_marginRight="@dimen/normal_10"
            android:layout_marginTop="@dimen/normal_5"
            android:layout_weight="1"
            android:text="评测内容：hello"
            android:textColor="@color/hint_blue"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_test_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/normal_5"
            android:layout_marginLeft="@dimen/normal_10"
            android:layout_marginRight="@dimen/normal_10"
            android:layout_marginTop="@dimen/normal_5"
            android:layout_weight="1"
            android:text="评测得分：3.444分"
            android:textColor="@color/hint_blue"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/normal_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/normal_5"
            android:layout_marginLeft="@dimen/normal_10"
            android:layout_marginRight="@dimen/normal_10"
            android:layout_marginTop="@dimen/normal_5"
            android:layout_weight="1"
            android:text="所用时长：8s"
            android:textColor="@color/hint_blue"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_test_wrong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/normal_5"
            android:layout_marginLeft="@dimen/normal_10"
            android:layout_marginRight="@dimen/normal_10"
            android:layout_marginTop="@dimen/normal_5"
            android:layout_weight="1"
            android:text="是否乱读：否"
            android:textColor="@color/hint_blue"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
</LinearLayout>
