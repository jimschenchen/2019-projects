<resources>

    <!-- Base application theme. -->
    <!--android:theme="@style/Theme.AppCompat.Light.NoActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listDivider">@drawable/recycleview_divider</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow</item>
        <item name="android:windowExitAnimation">@anim/pophide</item>
    </style>

    <style name="menu_radio_button">
        <item name="android:background">@drawable/bg_btn_check</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@drawable/tc_btn_check</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/regular_dimen_x20</item>
        <item name="android:paddingRight">@dimen/normal_10</item>
    </style>

    <style name="top_radio_button">
        <item name="android:background">@drawable/bg_radio_check</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textColor">@drawable/tc_btn_check</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/normal_10</item>
        <item name="android:paddingRight">@dimen/normal_10</item>
    </style>

    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>
</resources>
